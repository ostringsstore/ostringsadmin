@page "/Usuarios"

<PageTitle>Usuarios</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Usuarios</h1>

        @if (users == null)
        {
            <p><em>Loading...</em></p>
        }
        else if (hasError)
        {
            <p><em>Error: @errorMessage</em></p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Documento</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>Celular</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.LastName</td>
                            <td>@user.Document</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>@user.PhoneNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
</AuthorizeView>